<p id="notice"><%= notice %></p>

<h1>Providers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Logo</th>
      <th>Qrcode</th>
      <th>Sn</th>
      <th>Product name</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.title %></td>
        <td><%= provider.logo %></td>
        <td><%= provider.qrcode %></td>
        <td><%= provider.sn %></td>
        <td><%= provider.product_name %></td>
        <td><%= provider.price %></td>
        <td><%= provider.stock %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

